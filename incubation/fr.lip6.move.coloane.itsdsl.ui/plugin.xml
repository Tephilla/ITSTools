<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="fr.lip6.move.coloane.itsdsl.ui.ItsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="itsdsl"
            id="fr.lip6.move.coloane.itsdsl.ItsDsl"
            name="ItsDsl Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="fr.lip6.move.coloane.itsdsl.ui.ItsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="fr.lip6.move.coloane.itsdsl.ItsDsl.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="fr.lip6.move.coloane.itsdsl.ui.ItsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="fr.lip6.move.coloane.itsdsl.ItsDsl.validate">
         <activeWhen>
            <reference
                    definitionId="fr.lip6.move.coloane.itsdsl.ItsDsl.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="fr.lip6.move.coloane.itsdsl.ItsDsl.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="fr.lip6.move.coloane.itsdsl.ItsDsl" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="fr.lip6.move.coloane.itsdsl.ui.ItsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="fr.lip6.move.coloane.itsdsl.ItsDsl"
            name="ItsDsl">
            <keywordReference id="fr.lip6.move.coloane.itsdsl.ui.keyword_ItsDsl"/>
        </page>
        <page
            category="fr.lip6.move.coloane.itsdsl.ItsDsl"
            class="fr.lip6.move.coloane.itsdsl.ui.ItsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="fr.lip6.move.coloane.itsdsl.ItsDsl.coloring"
            name="Syntax Coloring">
            <keywordReference id="fr.lip6.move.coloane.itsdsl.ui.keyword_ItsDsl"/>
        </page>
        <page
            category="fr.lip6.move.coloane.itsdsl.ItsDsl"
            class="fr.lip6.move.coloane.itsdsl.ui.ItsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="fr.lip6.move.coloane.itsdsl.ItsDsl.templates"
            name="Templates">
            <keywordReference id="fr.lip6.move.coloane.itsdsl.ui.keyword_ItsDsl"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            class="fr.lip6.move.coloane.itsdsl.ui.ItsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="fr.lip6.move.coloane.itsdsl.ItsDsl"
            name="ItsDsl">
            <keywordReference id="fr.lip6.move.coloane.itsdsl.ui.keyword_ItsDsl"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="fr.lip6.move.coloane.itsdsl.ui.keyword_ItsDsl"
            label="ItsDsl"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="fr.lip6.move.coloane.itsdsl.ItsDsl.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="fr.lip6.move.coloane.itsdsl.ItsDsl.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="fr.lip6.move.coloane.itsdsl.ItsDsl.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="fr.lip6.move.coloane.itsdsl.ItsDsl.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="fr.lip6.move.coloane.itsdsl.ui.ItsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="fr.lip6.move.coloane.itsdsl.ItsDsl.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="fr.lip6.move.coloane.itsdsl.ui.ItsDslExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="ItsDsl">
		</parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
