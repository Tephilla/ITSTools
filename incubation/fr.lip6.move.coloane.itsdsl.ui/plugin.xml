            class="fr.lip6.move.coloane.itsdsl.ui.ItsDslExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="itsdsl">
        </resourceServiceProvider>
    </extension>



   <extension
